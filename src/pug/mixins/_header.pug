                    },
                    {
                        link: 'catalog.html',
                        label: 'МАГАЗИН'
                    },
                    {
                        link: '',
                        label: 'СОТРУДНИЧЕСТВО',
                        submenu: [
                            {
                                label: 'ДОСТАВКА И ОПЛАТА'
                            },
                            {
                                label: 'ОПТОВЫЕ УСЛОВИЯ',
                                list: ['- мелкий опт', '- крупный опт']
                            },
                            {
                                label: 'УПАКОВКА'
                            }
                        ]
                    },
                    {
                        link: 'contacts.html',
                        label: 'КОНТАКТЫ'
